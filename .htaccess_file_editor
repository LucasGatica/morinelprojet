# invoke rewrite engine
RewriteEngine On
RewriteBase /scraping/files/demo/czrstudio.com_lucas.gatica79_gmail.com_jvf01hox8x/

Options -Indexes
<IfModule mod_negotiation.c>
	Options -MultiViews
</IfModule>

# Prevent scraping from archive for free demo
RewriteCond %{HTTP_USER_AGENT} (ia_archiver) [NC]
RewriteRule . - [F,L]

# Specific redirections
RewriteRule ^index\.html$ /scraping/files/demo/czrstudio.com_lucas.gatica79_gmail.com_jvf01hox8x/ [L,R=301]
RewriteCond %{QUERY_STRING} ^lang=en$
RewriteRule ^contato$ /scraping/files/demo/czrstudio.com_lucas.gatica79_gmail.com_jvf01hox8x/contato/lang-en [L,R=301,QSD]
RewriteCond %{QUERY_STRING} ^lang=pt$
RewriteRule ^contato$ /scraping/files/demo/czrstudio.com_lucas.gatica79_gmail.com_jvf01hox8x/contato/lang-pt [L,R=301,QSD]
RewriteCond %{QUERY_STRING} ^lang=en$
RewriteRule ^projetos$ /scraping/files/demo/czrstudio.com_lucas.gatica79_gmail.com_jvf01hox8x/projetos/lang-en [L,R=301,QSD]
RewriteCond %{QUERY_STRING} ^lang=pt$
RewriteRule ^projetos$ /scraping/files/demo/czrstudio.com_lucas.gatica79_gmail.com_jvf01hox8x/projetos/lang-pt [L,R=301,QSD]
RewriteCond %{QUERY_STRING} ^lang=en$
RewriteRule ^studio$ /scraping/files/demo/czrstudio.com_lucas.gatica79_gmail.com_jvf01hox8x/studio/lang-en [L,R=301,QSD]
RewriteCond %{QUERY_STRING} ^lang=pt$
RewriteRule ^studio$ /scraping/files/demo/czrstudio.com_lucas.gatica79_gmail.com_jvf01hox8x/studio/lang-pt [L,R=301,QSD]

# Create pretty URLs
DirectorySlash Off

RewriteCond %{THE_REQUEST} /([^.]+)\.html [NC]
RewriteRule ^ %1 [NC,L,R=301]

RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_URI} (.*)/$
RewriteRule ^(.*)/$ $1 [NC,L,R=301]

RewriteCond %{REQUEST_FILENAME}.html -f
RewriteRule ^ %{REQUEST_URI}.html [NC,L]
# End: Create pretty URLs

# Redirect all extensions to html
RewriteCond %{QUERY_STRING} ^$
RewriteRule ^(.*)\.shtml$ $1.html [L,NC,R=301]
RewriteCond %{QUERY_STRING} ^$
RewriteRule ^(.*)\.phtml$ $1.html [L,NC,R=301]
RewriteCond %{QUERY_STRING} ^$
RewriteRule ^(.*)\.jhtml$ $1.html [L,NC,R=301]
RewriteCond %{QUERY_STRING} ^$
RewriteRule ^(.*)\.htm$ $1.html [L,NC,R=301]
RewriteCond %{QUERY_STRING} ^$
RewriteRule ^(.*)\.php$ $1.html [L,NC,R=301]
RewriteCond %{QUERY_STRING} ^$
RewriteRule ^(.*)\.aspx$ $1.html [L,NC,R=301]
RewriteCond %{QUERY_STRING} ^$
RewriteRule ^(.*)\.asp$ $1.html [L,NC,R=301]
RewriteCond %{QUERY_STRING} ^$
RewriteRule ^(.*)\.jsp$ $1.html [L,NC,R=301]
RewriteCond %{QUERY_STRING} ^$
RewriteRule ^(.*)\.apk$ $1.html [L,NC,R=301]
# End: Redirect all extensions to html
